{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-react-hooks"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-console": false,
    "interface-name": false,
    "class-name": false,
    "interface-over-type-literal": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "jsx-boolean-value": false,
    "member-access": false,
    "react-hooks-nesting": "error"
  }
}